<form id="puraisu-form" method="post" action="/submit-data">
    <input type="hidden" name="coordinates" id="coordinates"/>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>

    <div class="row justify-content-start">
        <div class="form-group col-xs-auto">
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" id="postfestum" name="postfestum"> Postfestum
                </label>
            </div>
        </div>
        <div id="postfestum-hours" class="form-group col-sm-auto input-group input-group-sm">
            <input class="form-control" type="number" id="pf-time" name="pftime" title="Postfestum-ajankohta" value="1"/>
            <div class="input-group-addon">tuntia sitten</div>
        </div>
    </div>

    
    <!--
    <secretario 12.1.2018>
    Tähän kohtaan näytetään hakumahdollisuus kantaan jos edellä valittu "muu" vaihtoehdoksi.
    3-4 merkkiä vaadittava ennen kuin liipaistaan haku puraisu-content tms. tauluun.
    -->
    <div class="row">
        <div class="form-group col">
            <input class="form-control" placeholder="Mitäs ajattelit puraista?"
                   type="text" id="content" name="content">
        </div>
    </div>

    <div class="row">
        <div class="col-form-legend col">Missä? <i
                    id="accuracy" class="fa fa-compass fa-spin" title="ei paikkatietoja"></i>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input location-input" name="location" value="koti" checked> Koti
                </label>
            </div>

            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input location-input" name="location" value="työ"> Työ
                </label>
            </div>

            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input location-input" name="location" value="baari"> Baari
                </label>
            </div>

            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input location-input" name="location" id="customlocation"> Muu
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <input class="form-control" type="text" id="customlocation-input" placeholder="Missäs sitten?">
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <textarea class="form-control" placeholder="Lorem ipsum..." id="info" name="info"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <button type="submit" class="btn btn-success">Puraise!</button>
        </div>
    </div>
</form>
